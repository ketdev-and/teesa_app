<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Teesas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@null</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="app_bar_text">
        <item name="android:textSize">@dimen/tsz_20</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="outlined_inputs_field" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">@dimen/sz_40</item>
        <item name="boxCornerRadiusTopEnd">@dimen/sz_40</item>
        <item name="boxCornerRadiusBottomStart">@dimen/sz_40</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/sz_40</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="colorControlActivated">@color/ts_primary</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/ts_primary</item>
    </style>
    <style name="button_solid">
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/ts_secondary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:translationZ">5dp</item>
        <item name="cornerRadius">@dimen/sz_48</item>
    </style>
    <style name="button_outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/tsz_16</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="strokeColor">@color/ts_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">50dp</item>

    </style>
</resources>